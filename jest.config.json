{
  "preset": "ts-jest",
  "testEnvironment": "node",
  "testEnvironmentOptions": {
    "NODE_ENV": "test"
  },
  "coveragePathIgnorePatterns": [
    "/node_modules/",
  ],
  "restoreMocks": true,
  "moduleNameMapper": {
    "^@config": "<rootDir>/config",
    "^@lib/(.*)$": "<rootDir>/lib/$1",
    "^@api/(.*)$": "<rootDir>/api/$1",
    "^@interfaces/(.*)": "<rootDir>/interfaces",
    "^@models/(.*)$": "<rootDir>/models/$1",
    "^@utils/(.*)": "<rootDir>/utils"
  }
}
